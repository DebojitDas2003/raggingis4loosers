<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E39FF6"
    android:padding="15dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/profileIv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#c0c0c0"
        android:layout_centerHorizontal="true"
        android:src="@drawable/baseline_person_24"/>

    <!-- First Name-->


    <EditText
        android:id="@+id/firstNameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileIv"
        android:layout_marginTop="5dp"
        android:background="#ffff"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textColor="#000"
        android:textColorHint="#c5c5c5"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/lastNameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstNameEt"
        android:layout_marginTop="7dp"
        android:background="#ffff"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textColor="#000"
        android:textColorHint="#c5c5c5"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/phoneMobileEt"
        android:background="#ffff"
        android:padding="20dp"
        android:layout_below="@+id/lastNameEt"
        android:layout_marginTop="5dp"
        android:hint="Phone Number(mobile)"
        android:textColorHint="#c5c5c5"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/phoneHomeEt"
        android:background="#ffff"
        android:padding="20dp"
        android:layout_below="@+id/phoneMobileEt"
        android:layout_marginTop="5dp"
        android:hint="Phone Number(Home)"
        android:textColorHint="#c5c5c5"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/email"
        android:background="#ffff"
        android:padding="20dp"
        android:layout_below="@+id/phoneHomeEt"
        android:layout_marginTop="5dp"
        android:hint="Email"
        android:textColorHint="#c5c5c5"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/Address"
        android:background="#ffff"
        android:padding="20dp"
        android:layout_below="@+id/email"
        android:layout_marginTop="5dp"
        android:hint="Address"
        android:textColorHint="#c5c5c5"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:textSize="15sp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/saveEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#5EBC37"
        android:padding="20dp"

        android:src="@drawable/baseline_done_24" />

</RelativeLayout>